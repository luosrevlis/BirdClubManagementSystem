@model dynamic

@{
    int height = Model.Height ?? 200;
    string selector = Model.Selector;
    string contents = Model.Contents ?? "";
}

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<link rel="stylesheet" href="~/lib/summernote/summernote-lite.min.css" />
<script src="~/lib/summernote/summernote-lite.min.js"></script>

<textarea id="@selector" name="@selector">
    @Html.Raw(contents)
</textarea>
<script>
    $('#@selector').summernote({
        tabsize: 2,
        height: @height
    });
</script>