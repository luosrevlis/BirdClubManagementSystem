@model Feedback

@{
    ViewData["Title"] = "Create";
}

@section Styles {
    <link rel="stylesheet" href="~/css/form.css" />
    <link rel="stylesheet" href="~/css/feedback/create.css" />
}

<div class="main-form">
    <section class="container-template">
        <h2>Give us your feedback!</h2>
        <p>Your feedback will help us improve our community!</p>
        <form asp-action="Create" class="form" onsubmit="return validateAll()">

            <div class="input-box title-field">
                <label>Title</label>
                <input asp-for="Title" placeholder="Enter title" required class="title" />
                <!-- add error message here -->
                <span class="error title-error">
                    <img src="~/img/resetpass/alert-circle.svg" alt="">
                    <p class="error-text">Title cannot be empty</p>
                </span>
            </div>

            <div class="input-box contents-field">
                <label>Contents</label>
                <textarea asp-for="Contents" placeholder="Enter feedback contents" rows="10" required class="contents"></textarea>
                <!-- add error message here -->
                <span class="error contents-error">
                    <img src="~/img/resetpass/alert-circle.svg" alt="">
                    <p class="error-text">Contents cannot be empty</p>
                </span>
            </div>

            <input class="button" type="submit" value="Submit" />
        </form>
        <div class="back-region">
            <a asp-action="Index" asp-controller="Home" class="back-link">Back to home page</a>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/feedback/create.js"></script>
}
