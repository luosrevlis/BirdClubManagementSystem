@model BirdClubInfoHub.Models.Blog

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="BlogCategory.Name" class="control-label"></label>
                <select asp-for="BlogCategoryId" class ="form-control" asp-items="ViewBag.CategoryOptions">
                    <option value="">Choose a category</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contents" class="control-label"></label>
                @await Html.PartialAsync("_Summernote", new { Height = 500, Selector = "Contents", Contents = "" })
            </div>
            <div class="form-group">
                <label asp-for="Thumbnail" class="control-label"></label>
                <br />
                <input type="file" name="thumbnailFile" accept="image/*" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
