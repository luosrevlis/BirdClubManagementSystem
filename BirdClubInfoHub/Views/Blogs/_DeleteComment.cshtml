@model CommentDTO

<div class="delete-comment-container" data-comment-delete-id="@Model.Id">
    <form class="delete-comment-form" asp-controller="Blogs" asp-action="DeleteComment">
        <h2>Are you sure you want to delete this comment?</h2>

        <div class="delete-comment-control">
            <input class="accept-button" type="submit" value="Delete" />
            <button class="cancel-button" type="button" onclick="cancelDelete(@Model.Id)">Cancel</button>
        </div>

        <input type="hidden" asp-for="Id" />
    </form>
</div>