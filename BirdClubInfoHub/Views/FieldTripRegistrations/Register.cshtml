@model BirdClubInfoHub.Models.FieldTripRegistration

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h3>Register to participate in this event?</h3>
<div>
    <h4>FieldTrip</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FieldTrip.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FieldTrip.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FieldTrip.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FieldTrip.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FieldTrip.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FieldTrip.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FieldTrip.Fee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FieldTrip.Fee)
        </dd>
    </dl>

    <form asp-action="Register">
        <input type="hidden" asp-for="FieldTripId" value="@Model.FieldTrip.Id"/>
        <input type="hidden" asp-for="UserId" value="@Context.Session.GetInt32("USER_ID")"/>
        <input type="submit" value="Register" class="btn" /> |
        <a asp-action="Index" asp-controller="ClubEvents">Back to List</a>
    </form>
</div>
