@model BirdClubInfoHub.Models.TournamentRegistration

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h3>Register to participate in this event?</h3>
<div>
    <h4>FieldTrip</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tournament.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tournament.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tournament.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tournament.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tournament.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tournament.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tournament.Fee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tournament.Fee)
        </dd>
    </dl>

    <form asp-action="Register">
        <select asp-for="BirdId" asp-items="ViewBag.Options">
            <option value="">Choose a bird</option>
        </select>
        <input type="hidden" asp-for="TournamentId" value="@Model.Tournament.Id" />
        <span asp-validation-for="BirdId" class="text-danger"></span>
        <input type="submit" value="Register" class="btn" /> |
        <a asp-action="Index" asp-controller="ClubEvents">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
