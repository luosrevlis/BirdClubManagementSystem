@model MeetingRegistration

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h3>Register to participate in this event?</h3>
<div>
    <h4>Meeting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meeting.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meeting.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meeting.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meeting.Description)
        </dd>
    </dl>

    <form asp-action="Register">
        <input type="hidden" asp-for="MeetingId" value="@Model.Meeting.Id" />
        <input type="hidden" asp-for="UserId" value="@Context.Session.GetInt32("USER_ID")" />
        <input type="submit" value="Register" class="btn" /> |
        <a asp-action="Index" asp-controller="ClubEvents">Back to List</a>
    </form>
</div>
