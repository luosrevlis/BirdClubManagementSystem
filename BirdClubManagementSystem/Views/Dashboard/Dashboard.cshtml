@{
    ViewData["Title"] = "Admin Dashboard";
}

@section Styles
    {
            <link rel="stylesheet" href="~/css/dashboard/dashboard.css" />
    @* link google icons *@
            <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp">
}

    <div class="dashboard-container">
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="~/img/dashboard/logo1.png" alt="">
                    <h2 class="text-muted">VNCMBC</h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-icons-sharp">close</span>
                </div>
            </div>
            <!-- side bar -->
            <div class="sidebar">
                <a href="#" class="active">
                    <img src="~/img/dashboard/dashboard-icon.svg" alt="">
                    <h3>Dashboard</h3>
                </a>
                <a href="#">
                    <img src="~/img/dashboard/home-icon.svg" alt="">
                    <h3>Home</h3>
                </a>
                <a href="#">
                    <img src="~/img/dashboard/log-out-icon.svg" alt="">
                    <h3>Logout</h3>
                </a>
            </div>
        </aside>
        <!-- ------------------------END OF ASIDE------------------ -->
        <main>
            <h1>Dashboard Overview</h1>

            <div class="date">
                <input type="date">
            </div>

            <div class="insights">
                <div class="sales card">
                    <span class="material-icons-sharp">groups</span>
                    <div class="middle">
                        <div class="left">
                            <h3>Members Join</h3>
                            <h1>200</h1>
                        </div>
                        <!-- pie chart -->
                        <!-- <div class="progress">
                            <svg>
                                <circle cx="38" cy="38" r="36"></circle>
                            </svg>
                            <div class="number">
                                <p>81%</p>
                            </div>
                        </div> -->
                    </div>
                    <small class="text-muted">Last 24 hours</small>
                </div>
                <!-- ===================END OF MEMBER =================== -->
                <div class="expenses">
                    <span class="material-icons-sharp">bar_chart</span>
                    <div class="middle">
                        <div class="left">
                            <h3>Total Blogs</h3>
                            <h1>500</h1>
                        </div>
                        <!-- pie chart
                        <div class="progress">
                            <svg>
                                <circle cx="38" cy="38" r="36"></circle>
                            </svg>
                            <div class="number">
                                <p>81%</p>
                            </div>
                        </div> -->
                    </div>
                    <small class="text-muted">Last 24 hours</small>
                </div>
                <!-- ===================END OF BLOGS =================== -->
                <div class="event">
                    <span class="material-icons-sharp">stacked_line_chart</span>
                    <div class="middle">
                        <div class="left">
                            <h3>Total Events</h3>
                            <h1>18</h1>
                        </div>
                        <!-- pie chart -->
                        <!-- <div class="progress">
                            <svg>
                                <circle cx="38" cy="38" r="36"></circle>
                            </svg>
                            <div class="number">
                                <p>81%</p>
                            </div>
                        </div> -->
                    </div>
                    <small class="text-muted">Last 24 hours</small>
                </div>
                <!-- ===================END OF EVENT =================== -->
                <div class="income">
                    <span class="material-icons-sharp">payments</span>
                    <div class="middle">
                        <div class="left">
                            <h3>Events's Revenue</h3>
                            <h1>900,000</h1>
                        </div>
                        <!-- pie chart -->
                        <!-- <div class="progress">
                            <svg>
                                <circle cx="38" cy="38" r="36"></circle>
                            </svg>
                            <div class="number">
                                <p>81%</p>
                            </div>
                        </div> -->
                    </div>
                    <small class="text-muted">Last 24 hours</small>
                </div>
                <!-- ===================END OF EVENT"S REVENUE =================== -->

            </div>
            <!-- =====================END OF INSIGHTS========================= -->
            <div class="recent-member">
                <h3>Rate of active members</h3>
                <div class="recent-member-card">
                    <div class="recent-member-title">

                        <h2><span class="material-icons-sharp">
                                inventory
                            </span></h2>
                            <h1>Active Rating</h1>
                    </div>
                    <div class="recent-member-rate">
                        <h1>68%</h1>
                    </div>
                </div>

            </div>
        </main>
        <!-- END OF MAIN -->
        <div class="right">
            <div class="top">
                <button id="menu-btn">
                    <span class="material-icons-sharp">menu</span>
                </button>
                <div class="profile">
                    <div class="info">
                        <p>Hey, <b>Minh Pham</b> </p>
                        <small class="text-muted">Admin</small>
                    </div>
                    <div class="profile-photo">
                        <img src="~/img/dropdown/ava.png" alt="">
                    </div>
                </div>
            </div>
            <!-- END OF TOP -->
        </div>
    </div>












@section Scripts {
    @{
        <script src="~/js/dashboard/dashboard.js"> </script>
    }
}
