@model IEnumerable<BirdClubManagementSystem.Models.TournamentStanding>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-action="Index" asp-controller="ClubEvents">Back to list</a>
<p>
    <a asp-action="Create" asp-route-tournamentid="@ViewBag.TournamentId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tournament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bird)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tournament.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bird.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Placement)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
