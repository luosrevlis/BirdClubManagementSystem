@model BirdClubManagementSystem.Models.TournamentStanding

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TournamentStanding</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TournamentId" value="@Model.TournamentId" />
            <div class="form-group">
                <label asp-for="Bird" class="control-label"></label>
                <select asp-for="BirdId" class="form-control" asp-items="ViewBag.BirdOptions">
                    <option value="">Choose a bird</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Placement" class="control-label"></label>
                <select asp-for="Placement" class="form-control">
                    <option value="">Choose a ranking</option>
                    <option value="First">First place</option>
                    <option value="Second">Second place</option>
                    <option value="Third">Third place</option>
                    <option value="Participation">Participation</option>
                </select>
                <span asp-validation-for="Placement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-tournamentid="@Model.TournamentId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
