@model FeedbackDTO

@{
    ViewData["Title"] = "Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/form.css" />
    <link rel="stylesheet" href="~/css/feedback/details.css" />
}

<div class="main-form">
    <section class="container-template">
        <h2>Feedback details</h2>
        <form class="form">

            <div class="input-box title-field">
                <label>Title</label>
                <input asp-for="Title" class="title" readonly />
            </div>

            <div class="input-box contents-field">
                <label>Contents</label>
                <textarea asp-for="Contents" rows="10" class="contents" readonly></textarea>
            </div>

        </form>
        <div class="back-region">
            <a asp-action="Index" class="back-link">Back</a>
        </div>
    </section>
</div>