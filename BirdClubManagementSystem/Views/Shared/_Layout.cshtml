<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BirdClubInfoHub</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap" />
    @RenderSection("Styles", required: false)

    <script src="~/js/site.js" defer asp-append-version="true"></script>
</head>

@{
    var userId = Context.Session.GetInt32("USER_ID");
}

<body>
    <header>
        <nav>
            <div class="nav-logo-container">
                <div class="nav-logo-img-container">
                    <img class="nav-logo-img" src="~/img/nav/club_logo.svg" alt="logo" />
                </div>
                <h1 class="nav-club-title">VNCMBC</h1>
            </div>

            <div class="nav-bar-container">
                <a asp-controller="Home" asp-action="Index" class="nav-link nav-active">Home</a>
                <a asp-controller="Home" asp-action="About" class="nav-link">About</a>
                <a asp-controller="Blogs" asp-action="Index" class="nav-link">Blogs</a>
                <a asp-controller="ClubEvents" asp-action="Index" class="nav-link">Events</a>
                <a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a>
            </div>

            <div class="nav-user-utils-container">
                @if (userId != null)
                {
                    <div class="nav-ava-container">
                        <img class="nav-ava-img" src="@Url.Action("GetImageFromBytes", "Profile", new { id = userId })" alt="avatar" onclick="toggleMenu()" />
                    </div>

                    @* add here dropdown *@
                    <div class="sub-menu-wrap" id="subMenu">
                        <div class="sub-menu">
                            <div class="user-info">
                                <img src="@Url.Action("GetImageFromBytes", "Profile", new { id = userId })" alt="avatar" />
                                <h2>@Context.Session.GetString("USER_NAME")</h2>
                            </div>
                            <hr>

                            <a asp-action="Index" asp-controller="Profile" class="sub-menu-link">
                                <img src="~/img/icon_svg/profile.svg" alt="icon">
                                <p>Edit profile</p>
                                <span>></span>
                            </a>
                            <a asp-action="Index" asp-controller="Birds" class="sub-menu-link">
                                <img src="~/img/icon_svg/bird_profile.svg" alt="icon">
                                <p>Your Birds</p>
                                <span>></span>
                            </a>
                            <a asp-action="Index" asp-controller="BlogHistory" class="sub-menu-link">
                                <img src="~/img/icon_svg/blogs.svg" alt="icon">
                                <p>Blog History</p>
                                <span>></span>
                            </a>
                            <a href="#" class="sub-menu-link">
                                <img src="~/img/icon_svg/headphones.svg" alt="icon">
                                <p>Help & Contact</p>
                                <span>></span>
                            </a>
                            @* add dashboard icon for dropdown *@
                            <a href="#" class="sub-menu-link">
                                <img src="~/img/icon_svg/dashboard.svg" alt="icon">
                                <p>Dashboard</p>
                                <span>></span>
                            </a>
                            <a asp-action="Index" asp-controller="Logout" class="sub-menu-link">
                                <img src="~/img/icon_svg/log-out.svg" alt="icon">
                                <p>Log out</p>
                                <span>></span>
                            </a>
                        </div>
                    </div>
                    @* end dropdown html *@
                }
                else
                {
                    <a asp-controller="Login" asp-action="Index" class="nav-login-link">Log In</a>
                }

                <div class="nav-menu-icon-container">
                    <img class="nav-menu-icon" src="~/img/nav/menu.png" alt="menu icon" />
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-body">
            <div class="footer-logo-container">
                <div class="footer-logo-img-container">
                    <img src="~/img/footer/logo.svg" alt="logo" />
                </div>
                <h1>VNCMBC</h1>
            </div>

            <div class="footer-link-body">
                <div class="footer-link-container">
                    <h2>Club</h2>
                    <div class="footer-link-box">
                        <a class="footer-link">About</a>
                        <a class="footer-link">Events</a>
                        <a class="footer-link">Blogs</a>
                    </div>
                </div>

                <div class="footer-link-container">
                    <h2>Services</h2>
                    <div class="footer-link-box">
                        <a class="footer-link">Community</a>
                        <a class="footer-link">Tournaments</a>
                        <a class="footer-link">Pricing</a>
                    </div>
                </div>

                <div class="footer-link-container">
                    <h2>Contact</h2>
                    <div class="footer-link-box">
                        <a class="footer-link">Help desk</a>
                        <a class="footer-link">Chat</a>
                        <a class="footer-link">Forum</a>
                    </div>
                </div>

                <div class="footer-link-container">
                    <h2>Payment</h2>
                    <div class="footer-link-box">
                        <a class="footer-link">
                            <img src="~/img/footer/vnpay_logo.png" alt="vn pay logo" />
                        </a>
                    </div>
                </div>
            </div>

            <div class="footer-feedback-container">
                <h2>Feedbacks</h2>
                <p>Give us your feedback about our club. Thanks for your visiting today.</p>
                <form class="feedback-container">
                    <input type="text" placeholder="Enter your feedback" required />
                    <input type="submit" value="SUBMIT" />
                </form>
                <p>Your feedbacks will help us develop our club and extend community for everyone.</p>
            </div>
        </div>

        <div class="footer-line"></div>

        <div class="footer-tail">
            <p>&copy; 2023 Vietnam Bird Club. All Rights Reserved. Terms &amp; Conditions. Privacy Policy.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await Html.PartialAsync("_Notification")
    @RenderSection("Scripts", required: false)
</body>
</html>
