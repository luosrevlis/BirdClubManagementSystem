@model string

@{
    ViewData["Title"] = "New password";
}

<h1>Enter new password</h1>

<form method="post" asp-action="NewPassword">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" name="userEmail" value="@Model" />
    <div class="form-group">
        <label class="control-label">New password</label>
        <input type="password" name="newPassword" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Confirm new password</label>
        <input type="password" name="confirmPassword" value="" class="form-control" />
    </div>
    <input type="submit" value="Reset password" class="btn btn-primary" />
</form>