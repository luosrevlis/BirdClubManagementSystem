@model FieldTripDTO

@{
    ViewData["Title"] = "Create";
}

@section Styles {
    <link rel="stylesheet" href="~/css/form.css" />
}

<div class="main-form">
    <section class="container-template">
        <h2>Edit field trip</h2>
        <form asp-action="Edit" class="form" onsubmit="return validateAll()">
            <input type="hidden" asp-for="Id" />

            <div class="input-box name-field">
                <label>Name</label>
                <input asp-for="Name" placeholder="Enter field trip name" required class="name" />
                <!-- add error message here -->
                <span class="error name-error">
                    <img src="~/img/resetpass/alert-circle.svg" alt="">
                    <p class="error-text">Field trip name cannot be empty.</p>
                </span>
            </div>

            <div class="input-box date-field">
                <label>Date and time of field trip</label>
                <input asp-for="StartDate" placeholder="Enter date and time" required class="date" />
                <span class="error date-error">
                    <img src="~/img/resetpass/alert-circle.svg" alt="">
                    <p class="error-text">Event cannot take place before registration is closed!</p>
                </span>
            </div>

            <div class="input-box description-field">
                <label>Description</label>
                <textarea id="field-trip-description" name="Description">
                    @Html.Raw(Model.Description)
                </textarea>
            </div>

            <div class="column">

                <div class="input-box reg-date-field">
                    <label>Registration close date</label>
                    <input asp-for="RegCloseDate" placeholder="Enter close date" required class="reg-date" />
                </div>

                <div class="input-box fee-field">
                    <label>Entrance fee</label>
                    <input asp-for="Fee" placeholder="Enter entrance fee" required class="fee" />
                    <!-- add error message here -->
                    <span class="error fee-error">
                        <img src="~/img/resetpass/alert-circle.svg" alt="">
                        <p class="error-text">Fee cannot be empty.</p>
                    </span>
                </div>

            </div>

            <input class="button" type="submit" value="Save" />
        </form>
        <div class="back-region">
            <a asp-action="Details" asp-route-id="@Model.Id" class="back-link">Back</a>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_Summernote", new { Height = 500, Selector = "#field-trip-description" });
    }
    <script src="~/js/event/create-edit.js"></script>
}
