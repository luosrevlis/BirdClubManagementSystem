@model FieldTrip

@{
    ViewData["Title"] = "Edit highlights";
}

<p>
    <a asp-action="Details" asp-route-id="@Model.Id">Back to details</a>
</p>
<h1>Highlights for @Model.Name</h1>
<form asp-action="EditHighlights" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <textarea id="highlight-contents" name="Highlights">@Html.Raw(Model.Highlights)</textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_Summernote", new { Height = 500, Selector = "#highlight-contents" });
    }
}