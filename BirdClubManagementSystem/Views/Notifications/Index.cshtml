@model BirdClubManagementSystem.Models.Notification

@{
    ViewData["Title"] = "Send notification email";
}

<h1>Send notification email</h1>

<h4>Notification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendNotification">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label value="Role" class="control-label"></label>
                @foreach (KeyValuePair<string, bool> pair in Model.IsRoleSelected)
                {
                    <input asp-for="IsRoleSelected[pair.Key]" type="checkbox"/>@pair.Key<br/>
                }
                <span asp-validation-for="Recipients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipients" class="control-label"></label>
                <select asp-for="Recipients" asp-items="ViewBag.CustomOptions"></select>
                <span asp-validation-for="Recipients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contents" class="control-label"></label>
                <textarea asp-for="Contents" class="form-control" rows="5" cols="100"></textarea>
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>